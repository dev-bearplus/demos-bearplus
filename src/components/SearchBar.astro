---
//import snowOnSearch from '../assets/snow-on-search.svg';
---
<div class="search-bar">
    <!-- <div class="search-bar-snow">
        <Image src={snowOnSearch} alt="snow on search" width={119} height={19} />
    </div> -->
    <div class="search-bar-ic">
        <svg width="100%" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.14288 12.2858C9.98321 12.2858 12.2858 9.98321 12.2858 7.14288C12.2858 4.30254 9.98321 2 7.14288 2C4.30254 2 2 4.30254 2 7.14288C2 9.98321 4.30254 12.2858 7.14288 12.2858Z" stroke="currentColor" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"></path>
            <path d="M14.0005 14L10.7793 10.7788" stroke="currentColor" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
    </div>
    <input class="search-bar-input" type="text" placeholder="SEACH PROJECT" />
</div>

<style lang="scss">
    .search-bar {
        display: flex;
        justify-content: center;
        align-items: center;

        background-color: rgba(0, 0, 0, 0.255);
        backdrop-filter: blur(.1rem);
        border: 1px solid #5d5777;
        border-radius: .5rem;
        gap: 0 1.2rem;
        padding-inline: 1.4rem;
        transition: background-color .4s ease-in-out, border .4s ease-in-out;
        @media only screen and (max-width: 991px){
            border: 1px solid #7164ad;
        }
        @media only screen and (max-width: 767px) {
            padding-inline: 1.8rem;
        }
        &:focus-within {
            & {
                border: 1px solid #7164ad;
                &-ic {
                    color: rgba(244, 244, 244, 1);
                }
            }
        }
        &-snow {
            position: absolute;
            top: -.8rem;
            left: 3.2rem;
            width: 15rem;
            img {
                width: 100%;
                height: auto;
            }
        }
        &-ic {
            width: 1.6rem;
            height: 1.6rem;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #535357;
            transition: color .4s ease-in-out;
            @media only screen and (max-width: 991px) {
                width: 1.5rem;
                height: 1.5rem;
            }
            @media only screen and (max-width: 767px) {
                width: 1.4rem;
                height: 1.4rem;
            }
        }
        &-input {
            background-color: transparent;
            outline: none;
            border: none;
            color: #f4f4f4;
            font-size: 1.6rem;
            padding-block: 1.2rem 1.3rem;
            height: auto;
            font-family: 'GT America Mono', sans-serif;
            letter-spacing: -.05em;
            @media only screen and (max-width: 991px) {
                padding-block: 1.4rem 1.5rem;
            }
            @media only screen and (max-width: 767px) {
                padding-block: 1.3rem 1.4rem;
            }
        }
    }
</style>